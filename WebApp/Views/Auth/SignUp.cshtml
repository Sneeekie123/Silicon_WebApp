@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}


<section id="signup">
    <div class="container">

        @if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
        {
            <div class="alert alert-danger">
                @ViewData["StatusMessage"]
            </div>
        }

        <form method="post" asp-action="Signup" asp-controller="Auth" novalidate>
            <h1>Create Account</h1>
            <p>Already have an account? <a asp-action="SignIn" asp-controller="Auth">Sign in here</a>.</p>

            <div class="content">
                <div id="form-firstname" class="input-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName">
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div id="form-lastname" class="input-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName">
                    <span asp-validation-for="LastName"></span>
                </div>
                <div id="form-content" class="input-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div id="form-password" class="input-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div id="form-confirmpassword" class="input-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>

                <div id="form-remember" class="checkbox-group">
                    <input asp-for="TermsAndConditions">
                    <label asp-for="TermsAndConditions"></label>
                </div>
                <span asp-validation-for="TermsAndConditions"></span>
                <div id="form-button">
                    <button id="form-button" class="btn-theme" type="submit"><i class="fa-regular fa-arrow-left-to-bracket"></i>Sign up</button>
                </div>
                <a id="forgot-password" asp-page="/forgot">Forgot your password?</a>
            </div>
        </form>

    </div>
</section>